{
  "sections": {
    "hero": {
      "type": "collection-image-with-title",
      "settings": {
        "show_title": false,
        "show_description": false,
        "text_color": "text-dark",
        "flex_align": "align--middle-left",
        "transparent": false,
        "show_image": false,
        "banner_layout": "overlay",
        "height": "screen-height-one-half",
        "overlay_opacity": 0,
        "overlay_color": "#000000"
      }
    },
    "subcollections": {
      "type": "subcollections",
      "disabled": true,
      "settings": {
        "subcollection_layout": "grid",
        "subcollection_description": false,
        "select_image": "collection"
      }
    },
    "main": {
      "type": "collection",
      "custom_css": [
        "div {border: solid #fff 2px;}"
      ],
      "settings": {
        "enable_sort": true,
        "enable_filters": true,
        "filter_layout": "slide-out",
        "grid": 4,
        "grid_mobile": "2",
        "product_limit": 50
      }
    }
  },
  "order": [
    "hero",
    "subcollections",
    "main"
  ]
}
