{% schema %}
{
  "name": "Collage Gallery",
  "blocks": [
    {
      "type": "image",
      "name": "Image",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        }
      ]
    }
  ]
}
{% endschema %}

<section class="collage-gallery">
  <div class="collage-gallery-container">
    {% for block in section.blocks %}
      <div class="collage-gallery-item">
        <img src="{{ block.settings.image | img_url: 'master' }}" alt="{{ block.settings.image.alt }}">
      </div>
    {% endfor %}
  </div>
</section>
