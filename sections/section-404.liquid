<section class="page page-404">
  <div class="page-404__content">
    <h2 class="theme">{{ 'general.404.title' | t }}</h2>
    <p class="center text--404">Suspended between earth and sky, you stand where few have ventured. <br>Search our archives below, to illuminate your path forward.</p>
    <div class="search-outer">
      <form action="{{ routes.search_url }}" class="search-form">
        <input type="text" name="q" class="search-box" placeholder="Find products" value="{{ search.terms }}"/>
        <button type="submit" class="search-submit">Search</button>
      </form>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "404",
  "templates": ["404"],
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background Image"
    }
  ]
}
{% endschema %}

<style>
  .page-404 {
    position: relative;
    min-height: 100vh;
    width: 100vw;
    max-width: 100%;
    margin: 0;
    padding: 0;
    display: flex;
    align-items: flex-end;
    justify-content: center;
    background-image: url('{{ section.settings.background_image | img_url: '2000x' }}');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }

  .page-404__content {
    background-color: rgba(255, 255, 255, 0.8);
    padding: 1rem;
    border-radius: 8px 8px 0 0;
    text-align: center;
    width: 100%;
  }

  .theme {
    margin-top: 0;
  }

  .text--404 {
    margin-bottom: 1rem;
  }

  .search-outer {
    margin-top: 1rem;
  }

  .search-form {
    display: flex;
    justify-content: center;
  }

  .search-box {
    padding: 0.5rem;
    border: 1px solid #ccc;
    border-radius: 4px 0 0 4px;
    width: 200px;
  }

  .search-submit {
    padding: 0.5rem 1rem;
    background-color: #333;
    color: white;
    border: none;
    border-radius: 0 4px 4px 0;
    cursor: pointer;
  }

  .search-submit:hover {
    background-color: #555;
  }

  @media screen and (min-width: 1200px) {
    .page-404 {
      background-size: 100% auto;
    }
  }
</style>